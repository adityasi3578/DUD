{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "./server",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["server", "shared"],
  "exclude": ["node_modules", "dist", "server/replitAuth.ts"]
}
