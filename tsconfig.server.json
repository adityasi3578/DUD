{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowJs": true,
      "checkJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": ["server", "shared"],
    "exclude": ["node_modules", "dist"]
  }
  